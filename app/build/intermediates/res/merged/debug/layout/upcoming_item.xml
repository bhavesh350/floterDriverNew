<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_10">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:alpha="0.9"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@id/b_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dim_10"
                android:paddingBottom="@dimen/dim_10"
                android:paddingTop="@dimen/dim_10"
                android:text=""
                android:textColor="@color/white"
                android:textSize="@dimen/dim_16" />

            <TextView
                android:id="@id/book_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dim_5"
                android:layout_toRightOf="@id/b_id_label"
                android:alpha="0.9"
                android:paddingBottom="@dimen/dim_10"
                android:paddingTop="@dimen/dim_10"
                android:text="1662"
                android:textColor="@color/white"
                android:textSize="@dimen/dim_16" />

            <TextView
                android:id="@id/book_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/dim_10"
                android:layout_marginRight="@dimen/dim_5"
                android:drawableLeft="@drawable/ic_calendar"
                android:drawablePadding="@dimen/dim_8"
                android:gravity="center"
                android:paddingBottom="@dimen/dim_10"
                android:paddingTop="@dimen/dim_10"
                android:text="22 OCT 2016"
                android:textColor="@color/white"
                android:textSize="@dimen/dim_16" />
        </RelativeLayout>

        <TextView
            android:id="@id/address_src"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_15"
            android:drawableLeft="@drawable/add_marker"
            android:drawablePadding="@dimen/dim_10"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_16" />

        <TextView
            android:id="@+id/to"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_10"
            android:drawablePadding="@dimen/dim_10"
            android:text="To"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_16" />

        <TextView
            android:id="@id/address_dest"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim_5"
            android:layout_marginLeft="@dimen/dim_10"
            android:layout_marginTop="@dimen/dim_5"
            android:drawableLeft="@drawable/add_marker"
            android:drawablePadding="@dimen/dim_10"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Status : Assigned"
            android:textColor="@color/black"
            android:textSize="@dimen/dim_16" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dim_10"
            android:orientation="horizontal"
            android:weightSum="2.0">

            <TextView
                android:id="@+id/txt_book_start"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/dim_10"
                android:text="Start Trip"
                android:textColor="@color/white"
                android:textSize="@dimen/dim_18"
                android:textStyle="bold" />

            <View
                android:layout_width="@dimen/dim_5"
                android:layout_height="2.0dip" />

            <TextView
                android:id="@+id/txt_book_cancel"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="@dimen/dim_10"
                android:text="Cancel Trip"
                android:textColor="@color/white"
                android:textSize="@dimen/dim_18"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>