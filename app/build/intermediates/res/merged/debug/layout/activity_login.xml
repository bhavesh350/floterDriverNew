<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dim_15"
            android:src="@drawable/logo" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/dim_10"
            android:text="Sign-in"
            android:textColor="@color/blue_text"
            android:textSize="@dimen/dim_25" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_50" />

        <EditText
            android:id="@+id/edt_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_50"
            android:layout_marginRight="@dimen/dim_50"
            android:layout_marginTop="@dimen/dim_5"
            android:background="@drawable/edit_text"
            android:drawableLeft="@drawable/ic_action_name"
            android:drawablePadding="@dimen/dim_10"
            android:gravity="center_vertical"
            android:hint="Mobile No"
            android:inputType="phone"
            android:padding="@dimen/dim_10"
            android:textColorHint="@color/blue_text"
            android:textSize="@dimen/dim_18" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dim_5"
            android:layout_marginLeft="@dimen/dim_50"
            android:layout_marginRight="@dimen/dim_50"
            android:layout_marginTop="@dimen/dim_20"
            android:background="@color/blue_text"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:padding="@dimen/dim_12"
                android:text="LOGIN"
                android:textColor="@color/white"
                android:textSize="@dimen/dim_20"
                android:textStyle="bold" />


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:padding="@dimen/dim_15"
        android:text="One time password (OTP) will be sent to this number for verification"
        android:textColor="@color/blue_text"
        android:textSize="@dimen/dim_15"
        android:textStyle="bold" />

</RelativeLayout>